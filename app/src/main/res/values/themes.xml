<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Breake" parent="Theme.AppCompat.DayNight.NoActionBar">
		<item name="android:statusBarColor">@android:color/transparent</item>
	</style>

	<style name="Theme.Breake.Splash" parent="Theme.SplashScreen">
		<!-- API 28 ~ 30 적용 -->
		<item name="android:windowBackground">@drawable/splash_background</item>
		<item name="android:windowFullscreen">true</item>

		<!-- API 31 이상 적용 -->
		<item name="android:windowSplashScreenBackground" tools:targetApi="31">@color/ic_brake_launcher_background</item>

		<item name="postSplashScreenTheme">@style/Theme.Breake</item>
	</style>

</resources>
