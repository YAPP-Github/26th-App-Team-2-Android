<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:padding="16dp"
	android:background="@android:color/white">

	<!-- 헤더 영역 -->
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="16dp"
		android:orientation="horizontal">

		<ImageView
			android:layout_width="48dp"
			android:layout_height="48dp"
			android:layout_gravity="center_vertical"
			android:layout_marginEnd="12dp"
			android:src="@drawable/ic_alarm_notification"
			android:tint="@color/primary_color" />

		<LinearLayout
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_weight="1"
			android:orientation="vertical">

			<TextView
				android:id="@+id/tv_app_name_expanded"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="그룹 이름"
				android:textColor="@android:color/black"
				android:textSize="18sp"
				android:textStyle="bold" />

			<TextView
				android:id="@+id/tv_description_expanded"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="4dp"
				android:text="알람 시간: 14:30"
				android:textColor="@android:color/darker_gray"
				android:textSize="14sp" />

		</LinearLayout>

		<ImageButton
			android:id="@+id/btn_cancel_expanded"
			android:layout_width="48dp"
			android:layout_height="48dp"
			android:background="?android:attr/selectableItemBackgroundBorderless"
			android:contentDescription="알람 취소"
			android:src="@drawable/ic_close"
			android:tint="@android:color/darker_gray" />

	</LinearLayout>

	<!-- 카운트다운 메인 영역 -->
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="#F5F5F5"
		android:gravity="center"
		android:orientation="vertical"
		android:padding="20dp">

		<TextView
			android:id="@+id/tv_remaining_info"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginBottom="8dp"
			android:text="남은 시간"
			android:textColor="@android:color/darker_gray"
			android:textSize="14sp" />

		<TextView
			android:id="@+id/tv_countdown_expanded"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginBottom="12dp"
			android:fontFamily="monospace"
			android:text="00:00:00"
			android:textColor="@color/primary_color"
			android:textSize="32sp"
			android:textStyle="bold" />

		<ProgressBar
			android:id="@+id/progress_countdown_expanded"
			style="?android:attr/progressBarStyleHorizontal"
			android:layout_width="match_parent"
			android:layout_height="8dp"
			android:progressBackgroundTint="#E0E0E0"
			android:progressTint="@color/primary_color" />

	</LinearLayout>

</LinearLayout>
